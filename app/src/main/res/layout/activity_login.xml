<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/actv_ip"
        android:layout_width="332dp"
        android:layout_height="44dp"
        android:layout_marginTop="94dp"
        android:hint="请输入账号"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:inputType="text|textNoSuggestions"
        android:maxLength="30"
        android:singleLine="true"
        android:imeOptions="flagNoExtractUi"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_select_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        android:tint="#909399"
        app:layout_constraintBottom_toBottomOf="@+id/actv_ip"
        app:layout_constraintEnd_toEndOf="@+id/actv_ip"
        app:layout_constraintTop_toTopOf="@+id/actv_ip" />


    <ImageView
        android:id="@+id/img_clean_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:tint="#909399"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@+id/actv_ip"
        app:layout_constraintEnd_toStartOf="@+id/iv_select_user"
        app:layout_constraintTop_toTopOf="@+id/actv_ip"
        app:layout_goneMarginRight="15dp" />


    <EditText
        android:id="@+id/actv_port"
        android:layout_width="332dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:hint="请输入密码"
        android:maxLength="20"
        android:imeOptions="flagNoExtractUi"
        android:singleLine="true"
        android:padding="5dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actv_ip" />


    <ImageView
        android:id="@+id/cb_show_psd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:tint="#909399"
        app:layout_constraintBottom_toBottomOf="@+id/actv_port"
        app:layout_constraintEnd_toEndOf="@+id/actv_port"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@+id/actv_port" />

    <CheckBox
        android:id="@+id/cb_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:buttonTint="#009CFF"
        android:checked="true"
        android:text="记住密码"
        android:textColor="#009CFF"
        app:layout_constraintStart_toStartOf="@+id/actv_port"
        app:layout_constraintTop_toBottomOf="@+id/actv_port" />


    <TextView
        android:id="@+id/login_btn"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="网络模式"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/actv_port"
        app:layout_constraintTop_toBottomOf="@+id/cb_password" />


    <TextView
        android:id="@+id/login_btn_local"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="离线模式"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="@+id/actv_port"
        app:layout_constraintTop_toBottomOf="@+id/cb_password" />


